<tr>
  <td>
    <%= image_tag product[:image].tiny.url %>
  </td>
  <td>
    <h4><%= product[:name] %></h4>
    <br>
    <p><%= product[:description] %></p>
  </td>
  <td>
    $<%= product[:line_item].item_price_cents / 100.0 %>
  </td>
  <td>
    <div>
    <%= product[:line_item].quantity %>
    </div>
  </td>
  <td>
    $<%= product[:line_item].total_price_cents / 100.0 %>
  </td>
</tr>
